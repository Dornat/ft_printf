		ft_toupper.c \
		get_next_line.c \

INCLUDE = ./includes/
OBJECTS = $(SRC:.c=.o)
CFLAGS = -Wall -Wextra -Werror

.PHONY: all
all: $(NAME)

$(NAME): $(OBJECTS) $(INCLUDE)
	@ar rc $(NAME) $(OBJECTS)
	@ranlib $(NAME)

.c.o:
	@gcc -g -c $(CFLAGS) -I $(INCLUDE) $(SRC) $<

.PHONY: clean
clean:
	@/bin/rm -f $(OBJECTS)

.PHONY: fclean
fclean: clean
	@/bin/rm -f $(NAME)

.PHONY: re
re: fclean all
